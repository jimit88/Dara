<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

	<!--preference for="Magento\Contact\Block\ContactForm" type="Plumtree\RequestCatalog\Block\Postform" /-->

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="requestcatalog_quotes_listing_data_source" xsi:type="string">Plumtree\RequestCatalog\Model\ResourceModel\Quickrfq\Grid\Collection</item>                
            </argument>
        </arguments>
    </type>

    <type name="Plumtree\RequestCatalog\Model\ResourceModel\Quickrfq\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">plumtree_requestcatalog</argument>
            <argument name="eventPrefix" xsi:type="string">requestcatalog_quote_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">quote_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Plumtree\RequestCatalog\Model\ResourceModel\Quickrfq</argument>
        </arguments>
    </type>

<virtualType name="RfqGirdFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    
    <virtualType name="QuoteGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Plumtree\RequestCatalog\Model\ResourceModel\Quickrfq\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">RfqGirdFilterPool</argument>
        </arguments>
    </virtualType>

    
</config>