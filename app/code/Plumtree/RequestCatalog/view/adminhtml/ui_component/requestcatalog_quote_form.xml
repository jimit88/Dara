                </item>
            </argument>
        </field>-->
		<field name="requested_catalogs_complete">
            <argument name="data" xsi:type="array">
			  
                 <item name="config" xsi:type="array">
			       <item name="label" xsi:type="string" translate="true">Catalogs</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="source" xsi:type="string">requestcatalog</item>
                    <item name="sortOrder" xsi:type="number">110</item>
                    <item name="dataScope" xsi:type="string">requested_catalogs_complete</item>
                    <item name="default" xsi:type="string">Complete Catalog</item>
                </item>
            </argument>
        </field> 

		
		<field name="status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Plumtree\RequestCatalog\Model\Status</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">requestcatalog</item>
                    <item name="sortOrder" xsi:type="number">120</item>
                    <item name="dataScope" xsi:type="string">status</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
        </field> 

        
    </fieldset>
</form>
