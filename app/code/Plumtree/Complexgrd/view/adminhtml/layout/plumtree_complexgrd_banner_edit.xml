<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Plumtree\Complexgrd\Block\Adminhtml\Banner\Edit" name="plumtree_complexgrd_banner_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Plumtree\Complexgrd\Block\Adminhtml\Banner\Edit\Tabs" name="plumtree_complexgrd_banner_tabs">
                <block class="Plumtree\Complexgrd\Block\Adminhtml\Banner\Edit\Tab\Banner" name="plumtree_complexgrd_banner_edit_tab_banner"/>
                <block class="Plumtree\Complexgrd\Block\Adminhtml\Banner\Edit\Tab\Slider" name="plumtree_complexgrd_banner_edit_tab_slider"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">banner</argument>
                    <argument name="block" xsi:type="string">plumtree_complexgrd_banner_edit_tab_banner</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">slider</argument>
                    <argument name="block" xsi:type="string">plumtree_complexgrd_banner_edit_tab_slider</argument>
                </action>
				<action method="addTab">
                    <argument name="name" xsi:type="string">attachment_products</argument>
                    <argument name="block" xsi:type="array">
                        <item name="label" xsi:type="string">Select Products</item>
                        <item name="title" xsi:type="string">Select Products</item>
                        <item name="url" xsi:type="helper" helper="Plumtree\Complexgrd\Helper\Data::getProductsGridUrl"></item>
                        <item name="class" xsi:type="string">ajax</item>
                    </argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
