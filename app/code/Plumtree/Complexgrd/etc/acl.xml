<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Plumtree_Complexgrd::complexgrd" title="Banner Slider" sortOrder="55">
                    <resource id="Plumtree_Complexgrd::banner" title="Article Manager" sortOrder="10"/>
                    <resource id="Plumtree_Complexgrd::slider" title="Article Categories Manager" sortOrder="20"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Plumtree_Complexgrd::complexgrd_config" title="Article Manager***"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
